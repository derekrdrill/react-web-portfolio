{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{js,jsx}"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 40,
      "lines": 48,
      "statements": 48
    }
  },
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|pdf|css|less|scss|sss|styl)$": "jest-transform-stub"
  }
}
